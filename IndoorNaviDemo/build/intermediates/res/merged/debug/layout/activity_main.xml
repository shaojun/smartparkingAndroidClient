<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"            
            android:weightSum="2"
            android:orientation="vertical" >

            <com.SmartParking.UI.MarkableTouchImageView
                android:id="@+id/imgControl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="#7ed6cb" >

                <Button
                    android:id="@+id/buttonSelectPic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="2dp"
                    android:text="@string/buttonLoadPic"
                    android:textSize="5sp" />

                <Button
                    android:id="@+id/buttonSampling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="#CCCC00"
                    android:focusableInTouchMode="true"
                    android:text="@string/ConfirmSampling"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp" >

                <Button
                    android:id="@+id/buttonPersist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ConfirmPersist" />

                <Button
                    android:id="@+id/buttonViewSampleData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ViewData" />

                <Button
                    android:id="@+id/buttonLoad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ConfirmLoad" />

                <Button
                    android:id="@+id/buttonStartNavi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="#3b5998"
                    android:text="@string/StartNaviButtonText"
                    android:textSize="35sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <ExpandableListView
                android:id="@+id/pendingSampleExpandableListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >
            </ExpandableListView>

            <TextView
                android:id="@+id/logTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:text="@string/LogText" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/C:/Fun/Code/ReposOnGitHub/smartparkingAndroidClient/smartparkingAndroidClient/IndoorNaviDemo/res/layout/activity_main.xml -->